<!--                            android:layout_height="wrap_content"-->
<!--                            android:inputType="textEmailAddress"-->
<!--                            android:textColor="#212121"-->
<!--                            android:textSize="15sp"-->
<!--                            android:padding="14dp" />-->
<!--                    </com.google.android.material.textfield.TextInputLayout>-->

                    <!-- Gender Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_gender"
                        android:layout_marginBottom="18dp"
                        app:boxStrokeColor="#A0A0A0"
                        app:boxStrokeWidth="0.5dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350"
                        app:endIconTint="#757575">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/spinnerGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Join Date -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_join_date"
                        android:layout_marginBottom="8dp"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="#757575"
                        app:boxStrokeColor="#9E9D9D"
                        app:boxStrokeWidth="0.5dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etJoinDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Next Button with Icon -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="@string/btn_next_plan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="#FDE9E9"
                app:cornerRadius="10dp"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp"
                app:elevation="4dp"
                android:layout_marginTop="19dp"
                android:textColor="#F60B0B"
                android:letterSpacing="0.05"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconTint="#F60B0B"
                app:iconPadding="8dp" />

            <!-- Optional: Progress Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/progress_indicator_active" />

                <View
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/progress_indicator_inactive" />

                <View
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/progress_indicator_inactive" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_1_of_3"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>