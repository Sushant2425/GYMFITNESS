<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMember"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <!-- Avatar with Status Indicator -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:cardCornerRadius="27dp"
                    android:visibility="gone"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFEBEE">

                    <TextView
                        android:id="@+id/tvInitial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#EF5350"
                        android:text="M" />

                </androidx.cardview.widget.CardView>

                <!-- Status Indicator Dot -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/statusIndicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|end"
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#EF5350" />

            </FrameLayout>

            <!-- Member Information -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <!-- Name and Status Badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvMemberName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Member Name"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXPIRED"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_status_expired" />

                </LinearLayout>

                <!-- Phone Number -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@android:drawable/stat_sys_phone_call"
                        app:tint="#757575" />

                    <TextView
                        android:id="@+id/tvMemberPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="+91 1234567890"
                        android:textSize="13sp"
                        android:textColor="#757575" />

                </LinearLayout>

                <!-- Plan Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <!-- Plan Type Badge -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:visibility="gone"
                            android:src="@android:drawable/ic_menu_agenda"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/tvPlanType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="1 Month"
                            android:textSize="12sp"
                            android:textColor="#2196F3"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Divider 1 -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#E0E0E0" />

                    <!-- Pending Amount -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:visibility="gone"
                            android:src="@android:drawable/ic_dialog_alert"
                            app:tint="#212120" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending:"
                            android:textSize="11sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/tvOutstandingBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="â‚¹"
                            android:textSize="12sp"
                            android:textColor="#FB1706"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Divider 2 -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#E0E0E0" />

                    <!-- Expiry Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivExpiryIcon"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@android:drawable/ic_menu_recent_history"
                            app:tint="#EF5350" />

                        <TextView
                            android:id="@+id/tvEndDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="5 days ago"
                            android:textSize="12sp"
                            android:textColor="#EF5350"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                </LinearLayout>
                <!-- Outstanding Balance -->
                <LinearLayout
                    android:id="@+id/layoutDues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"

                    android:gravity="center_vertical"
                    android:visibility="gone">



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/dividerLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="68dp"
            android:layout_marginEnd="14dp"
            android:background="#F0F0F0"
            android:visibility="gone" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/layoutExpiredActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="12dp"
            android:paddingBottom="14dp"
            android:gravity="end"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRenewPlan"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text=" Renew Plan"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:cornerRadius="10dp"
                app:backgroundTint="#EF5350"
                app:elevation="2dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- Bottom Indicator -->
        <View
            android:id="@+id/viewBottomIndicator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>