<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Plan Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvPlanId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DEC-2025-1M-01"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <!-- Status Badge -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvPlanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvPlanStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAID"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Plan Details Row 1 -->
        <!-- Plan Dates Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duration:"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tvPlanDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/12 - 31/12/2025"
                android:textSize="12sp"
                android:textColor="#212121" />

        </LinearLayout>

        <!-- Plan Details Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Fee:"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tvTotalFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹200"
                android:textSize="12sp"
                android:textColor="#212121" />

        </LinearLayout>

        <!-- Payment Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Paid:"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tvAmountPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="₹200"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode:"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tvPaymentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Cash"
                android:textSize="12sp"
                android:textColor="#212121" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>