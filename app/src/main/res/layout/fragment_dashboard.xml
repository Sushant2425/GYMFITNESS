<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_header_premium"
                android:paddingEnd="20dp"
                android:paddingBottom="24dp">

                <!-- Top Row: Menu, Gym Name, Settings, Notification -->
                <!-- Top Row: Menu, Settings, Notification - ONLY REPLACE THIS SECTION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Menu Icon (Left) -->
                    <ImageView
                        android:id="@+id/iv_menu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_menu"
                        app:tint="#FFFFFF"
                        android:paddingStart="10dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                    <!-- Spacer to push right icons to the end -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Settings Icon (Right) -->
                    <ImageView
                        android:id="@+id/iv_settings"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_settings"
                        app:tint="#FFFFFF"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                    <!-- Notification Icon with Badge (Right End) -->
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:id="@+id/iv_notification"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_notification"
                            app:tint="#FFFFFF"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                        <!-- Notification Badge -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/notification_badge"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            app:cardBackgroundColor="#FF4757"
                            app:cardCornerRadius="9dp"
                            app:cardElevation="2dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_notification_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="3"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>
                <!-- Main Content Row: Welcome, Gym Name, Date, Avatar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_welcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_back"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:alpha="0.8"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tv_gym_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Sagar Gym"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.02"
                            android:fontFamily="sans-serif-black" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Today: 05 Jan 2026"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:alpha="0.7"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <!-- Professional Avatar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/logogym"
                             />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>        <!-- Compact Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp">

            <!-- Compact Overview Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overview"
                android:textColor="#1A1A1A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:layout_marginBottom="8dp" />

            <!-- Compact Statistics Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Total Members -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#F0F8FF"
                        android:padding="10dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                app:cardBackgroundColor="#E3F2FD"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_person"
                                    app:tint="#2196F3" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:id="@+id/tv_total_members"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#1A1A1A"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:letterSpacing="-0.02" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_members"
                                    android:textColor="#757575"
                                    android:textSize="10sp"
                                    android:layout_marginTop="1dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Active Members -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#F1F8E9"
                        android:padding="10dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                app:cardBackgroundColor="#E8F5E9"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_active"
                                    app:tint="#4CAF50" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:id="@+id/tv_active_members"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#1A1A1A"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:letterSpacing="-0.02" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/active_members"
                                    android:textColor="#757575"
                                    android:textSize="10sp"
                                    android:layout_marginTop="1dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Compact Quick Actions Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_actions"
                android:textColor="#1A1A1A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <!-- Add Member -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_add_member"
                        android:layout_width="120dp"
                        android:layout_height="75dp"
                        android:layout_marginEnd="10dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#EF5350"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/img"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/add_member"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- View Members -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_members"
                        android:layout_width="120dp"
                        android:layout_height="75dp"
                        android:layout_marginEnd="10dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#2196F3"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/expire"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/expire_plan"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Collect Payment -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_collect_payment"
                        android:layout_width="120dp"
                        android:layout_height="75dp"
                        android:layout_marginEnd="10dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#4CAF50"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/collectpay"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/collect_payment"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Reports -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_reports"
                        android:layout_width="120dp"
                        android:layout_height="75dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="#9C27B0"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/members"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/view_members"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>


            <!-- Compact Financial Charts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Financial Overview"
                    android:textColor="#1A1A1A"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.01" />

                <TextView
                    android:id="@+id/tv_chart_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 7 Days"
                    android:textColor="#9E9E9E"
                    android:textSize="10sp"
                    android:background="@drawable/ic_gym"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Compact Monthly Revenue Chart -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <!-- Revenue Stats -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Monthly Revenue"
                                        android:textColor="#757575"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_monthly_revenue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹0"
                                    android:textColor="#1A1A1A"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="3dp"
                                    android:letterSpacing="-0.02" />

                                <TextView
                                    android:id="@+id/tv_revenue_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+0% vs last month"
                                    android:textColor="#4CAF50"
                                    android:textSize="9sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="1dp" />

                            </LinearLayout>

                            <!-- Revenue Chart -->
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="75dp"
                                android:layout_weight="1">

                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/chart_monthly_revenue"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <!-- Chart Overlay Info -->
                                <LinearLayout
                                    android:id="@+id/revenue_overlay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="No Data"
                                        android:textColor="#BDBDBD"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Add payments to see chart"
                                        android:textColor="#E0E0E0"
                                        android:textSize="8sp"
                                        android:layout_marginTop="1dp" />
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <!-- Revenue Date Labels -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="80dp"
                            android:paddingEnd="6dp">

                            <TextView
                                android:id="@+id/tv_revenue_start_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Jan 1"
                                android:textColor="#BDBDBD"
                                android:textSize="8sp"
                                android:layout_marginStart="8dp"
                                android:gravity="start" />

                            <TextView
                                android:id="@+id/tv_revenue_end_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Today"
                                android:textColor="#BDBDBD"
                                android:textSize="8sp"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <!-- Compact Pending Dues Chart -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <!-- Dues Stats -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pending Dues"
                                        android:textColor="#757575"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_pending_payments"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹0"
                                    android:textColor="#1A1A1A"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="3dp"
                                    android:letterSpacing="-0.02" />

                                <TextView
                                    android:id="@+id/tv_dues_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0% of total fees"
                                    android:textColor="#FF9800"
                                    android:textSize="9sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="1dp" />

                            </LinearLayout>

                            <!-- Dues Chart -->
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="75dp"
                                android:layout_weight="1">

                                <!-- Chart Overlay Info -->

                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/chart_pending_dues"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <LinearLayout
                                    android:id="@+id/dues_overlay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="No Dues"
                                        android:textColor="#BDBDBD"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="All payments collected!"
                                        android:textColor="#E0E0E0"
