<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_background">

    <!-- Modern AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="#212121">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Member"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_member_subtitle"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFF3E0"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        app:tint="#F57C00"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/edit_info_hint"
                        android:textColor="#E65100"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Edit Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/member_information"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <!-- NAME -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_full_name"
                        android:layout_marginBottom="18dp"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#757575"
                        app:boxStrokeColor="#EF5350"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMemberName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- PHONE (Disabled) -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_phone_number"
                        android:layout_marginBottom="18dp"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="#BDBDBD"
                        app:boxStrokeColor="#BDBDBD"
                        app:boxStrokeWidth="1dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#BDBDBD"
                        app:helperText="@string/phone_locked_hint"
                        app:helperTextTextColor="#FF9800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMemberPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:enabled="false"
                            android:focusable="false"
                            android:textColor="#9E9E9E"
                            android:textSize="15sp"
                            android:padding="14dp"
                            android:background="#F5F5F5" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- EMAIL -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:layout_marginBottom="18dp"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="#757575"
                        app:boxStrokeColor="#EF5350"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMemberEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- GENDER -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_gender"
                        android:layout_marginBottom="18dp"
                        app:boxStrokeColor="#EF5350"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350"
                        app:endIconTint="#757575">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/spinnerGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- JOIN DATE -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_join_date"
                        android:layout_marginBottom="8dp"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="#757575"
                        app:boxStrokeColor="#EF5350"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etJoinDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/delete_member"
                    android:textAllCaps="false"
                    android:textColor="#F44336"
                    app:strokeColor="#F44336"
                    app:strokeWidth="2dp"
                    app:cornerRadius="16dp"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconGravity="start"
                    app:iconTint="#F44336" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/update_member"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"
                    android:textColor="#FFFFFF"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="start"
                    app:iconTint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>