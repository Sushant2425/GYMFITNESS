<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
>

    <!-- Modern AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"

            app:subtitleTextColor="@color/white"
            app:titleTextColor="@color/white"
            android:layout_height="?attr/actionBarSize"
            app:navigationIconTint="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collect Payment"
                    android:textColor="#FDFCFC"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search and collect payment"
                    android:textColor="#DEDDDD"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Search Member Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_search"
                            app:tint="#EF5350" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Search Member"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter phone number or name"
                        android:layout_marginBottom="16dp"
                        app:startIconDrawable="@drawable/ic_search"
                        app:startIconTint="#757575"
                        app:boxStrokeColor="#EF5350"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:hintTextColor="#EF5350">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSearchMember"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="14dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSearchMember"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Search Member"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        app:backgroundTint="#EF5350"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/ic_search"
                        app:iconGravity="start"
                        app:iconTint="#FFFFFF"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Member Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMemberDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_person"
                            app:tint="#2196F3" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Member Details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                    </LinearLayout>

                    <!-- Detail Items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/detail_item_background"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textSize="13sp"
                                android:textColor="#757575"/>

                            <TextView
                                android:id="@+id/tvMemberName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="John Doe"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#212121"/>
                        </LinearLayout>

                        <!-- Phone -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/detail_item_background"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textSize="13sp"
                                android:textColor="#757575"/>

                            <TextView
                                android:id="@+id/tvMemberPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="9876543210"
                                android:textSize="15sp"
                                android:textColor="#212121"/>
                        </LinearLayout>

                        <!-- Plan -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/detail_item_background"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:text="Plan"
                                android:textSize="13sp"
                                android:textColor="#757575"/>

                            <TextView
                                android:id="@+id/tvPlanType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3 Months"
                                android:textSize="15sp"
                                android:textColor="#212121"/>
                        </LinearLayout>
                        <!-- Plan Dates -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/detail_item_background"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:text="Plan Period"
                                android:textSize="13sp"
                                android:textColor="#757575"/>

                            <TextView
                                android:id="@+id/tvPlanDates"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="01/02/2026 - 28/02/2026"
                                android:textSize="15sp"
                                android:textColor="#212121"/>
                        </LinearLayout>
                        <!-- Total Fee -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/detail_item_background"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:text="Total Fee"
                                android:textSize="13sp"
                                android:textColor="#757575"/>

                            <TextView
                                android:id="@+id/tvTotalFee"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="₹2500"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"/>
                        </LinearLayout>

                        <!-- Total Paid -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/detail_item_background"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:text="Total Paid"
                                android:textSize="13sp"
                                android:textColor="#757575"/>

                            <TextView
                                android:id="@+id/tvTotalPaid"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="₹1000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#2196F3"/>
                        </LinearLayout>

                        <!-- Remaining -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#FFEBEE"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Remaining Balance"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="#212121"/>

                                <TextView
                                    android:id="@+id/tvRemaining"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹1500"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:textColor="#F44336"/>
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Form Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPaymentForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_payment"
                            app:tint="#4CAF50" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Add Payment"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                    </LinearLayout>

                    <!-- Amount Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Payment Amount"
                        android:layout_marginBottom="20dp"
                        app:startIconDrawable="@drawable/ic_money"
                        app:startIconTint="#757575"
                        app:boxStrokeColor="#4CAF50"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:hintTextColor="#4CAF50"
                        app:prefixText="₹ ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="14dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Payment Mode Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Mode"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#212121"
                        android:layout_marginBottom="12dp"/>

                    <!-- Payment Mode Chips -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/rgPaymentMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/rbCash"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:checked="true"
                            app:chipBackgroundColor="@color/chip_background"
                            app:chipStrokeColor="#4CAF50"
                            app:chipStrokeWidth="2dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/rbUPI"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UPI"
                            app:chipBackgroundColor="@color/chip_background"
                            app:chipStrokeColor="#2196F3"
                            app:chipStrokeWidth="2dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/rbCard"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card"
                            app:chipBackgroundColor="@color/chip_background"
                            app:chipStrokeColor="#FF9800"
                            app:chipStrokeWidth="2dp" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Collect Payment Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCollectPayment"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:text="Collect Payment"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        app:backgroundTint="#4CAF50"
                        app:cornerRadius="10dp"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>