<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Plan Icon and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvDialogPlanName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Plan Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"/>

        <TextView
            android:id="@+id/tvDialogStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E8F5E9"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Active"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginBottom="20dp"/>

    <!-- Plan Details Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="8dp">

        <!-- Duration -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_margin="4dp"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar_small"
                app:tint="#F57C00"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvDialogDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Month"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#F57C00"/>

        </LinearLayout>

        <!-- Fee -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_margin="4dp"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_money"
                app:tint="#2E7D32"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fee"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvDialogFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 1500"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"/>

        </LinearLayout>

        <!-- Created Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_margin="4dp"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_input_add"
                app:tint="#2196F3"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created On"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvDialogCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 25, 2024"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2196F3"/>

        </LinearLayout>

    </GridLayout>

    <!-- Plan ID (Hidden by default) -->
    <TextView
        android:id="@+id/tvPlanId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Plan ID: PL12345"
        android:textSize="10sp"
        android:textColor="#9E9E9E"
        android:visibility="gone"/>

</LinearLayout>