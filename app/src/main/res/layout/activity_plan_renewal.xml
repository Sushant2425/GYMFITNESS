<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Professional Header with Back Arrow - All White -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white"
            app:title="Membership Renewal"
            app:titleTextColor="@android:color/white"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Member Info Card - Orange with proper dividers -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMemberHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:strokeColor="#FF8A65"
                app:strokeWidth="1dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Member Name -->
                    <TextView
                        android:id="@+id/tvMemberName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <!-- Member Phone -->
                    <TextView
                        android:id="@+id/tvMemberPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone: +91 98765 43210"
                        android:textColor="#595757"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Horizontal Divider -->
                    <View
                        android:id="@+id/dividerHeader1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#66FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <!-- Plan Status -->
                    <TextView
                        android:id="@+id/tvPlanStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan Status: EXPIRED"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="#E64A19"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Previous Plan Details Card with Key-Value Rows and Dividers -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPreviousPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"

                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Previous Plan Details"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <!-- Plan Type Row -->
                    <LinearLayout
                        android:id="@+id/rowPreviousPlanType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Plan Type"
                            android:textColor="#757575"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvPreviousPlanType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Month"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Horizontal Divider between rows -->
                    <View
                        android:id="@+id/dividerPrevious1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="12dp" />

                    <!-- Start Date Row -->
                    <LinearLayout
                        android:id="@+id/rowPreviousStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Start Date"
                            android:textColor="#757575"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tvPreviousStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/01/2026"
                            android:textColor="#212121"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/dividerPrevious2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="12dp" />

                    <!-- End Date Row -->
                    <LinearLayout
                        android:id="@+id/rowPreviousEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="End Date"
                            android:textColor="#757575"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tvPreviousEndDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/02/2026"
                            android:textColor="#FF5722"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:id="@+id/dividerPrevious3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="12dp" />

                    <!-- Previous Fee Row -->
                    <LinearLayout
                        android:id="@+id/rowPreviousFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Previous Fee"
                            android:textColor="#757575"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvPreviousFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹200"
                            android:textColor="#4CAF50"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Outstanding Balance Card - Warning Style -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOutstandingBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF3E0"
                app:strokeColor="#FF9800"
                app:strokeWidth="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âš ï¸ Outstanding Balance"
                        android:textColor="#E65100"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOutstandingBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹164"
                        android:textColor="#E65100"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- New Plan Selection Card - React Native Style Clean -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNewPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"

                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”„ Renew / New Plan"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="24dp" />

                    <!-- Quick Renew Button - Prominent Primary -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickRenew"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:text="Quick Renew (Same Plan)"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        app:iconTint="@color/white"
                        app:cardCornerRadius="10dp"
                        app:backgroundTint="#4CAF50"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR Select New Plan"
                        android:textColor="#9E9E9E"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="16dp" />

                    <!-- Plan Type Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNewPlanType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select New Plan"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/spinnerNewPlanType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <!-- Start Date Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNewStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="New Start Date"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                        app:startIconTint="#757575"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNewStartDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- End Date Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNewEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="End Date (Auto-calculated)"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@android:drawable/ic_menu_today"
                        app:startIconTint="#757575"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNewEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Plan Fee Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNewPlanFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Plan Fee"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:prefixText="â‚¹"
                        app:prefixTextColor="#4CAF50"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNewPlanFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal|numberSigned"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Summary Card - Blue Theme with Dividers -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPaymentSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Payment Summary"
                        android:textColor="#1976D2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <!-- New Plan Fee Row -->
                    <LinearLayout
                        android:id="@+id/rowSummaryNewPlan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="New Plan Fee"
                            android:textColor="#616161"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvSummaryNewPlan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Previous Due Row -->
                    <LinearLayout
                        android:id="@+id/layoutPreviousDue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+ Previous Due"
                            android:textColor="#E65100"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvSummaryPreviousDue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#E65100"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Main Divider -->
                    <View
                        android:id="@+id/dividerSummary"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#2196F3"
                        android:layout_marginVertical="16dp" />

                    <!-- Total Payable - Prominent -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Payable"
                            android:textColor="#1976D2"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalPayable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#1976D2"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textAllCaps="false" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Primary Action Button - Full Width Prominent -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceedToPayment"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Proceed to Payment"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:icon="@android:drawable/ic_menu_send"
                app:iconTint="@color/white"
                app:iconGravity="start"
                app:cardCornerRadius="10dp"
                app:backgroundTint="#2196F3"
                android:layout_marginBottom="24dp" />

            <!-- Progress Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
