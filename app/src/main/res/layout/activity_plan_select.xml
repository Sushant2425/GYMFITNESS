<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/white">

    <!-- Modern AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="#FDFCFC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:text="@string/select_plan"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_plan_subtitle"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="#FFF7F7"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_gym"
                        app:tint="#404040"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/plan_selection_hint"
                        android:textColor="#9B9B9B"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Plan Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_details"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <!-- PLAN DROPDOWN -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/membership_plan"
                        android:layout_marginBottom="18dp"
                        app:boxStrokeColor="#807E7E"
                        app:boxStrokeWidth="0.5dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350"
                        app:endIconTint="#757575">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/spinnerPlan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="14dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TOTAL FEE -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/total_fee"
                        android:layout_marginBottom="18dp"
                        app:startIconDrawable="@drawable/ic_money"
                        app:startIconTint="#757575"
                        app:boxStrokeColor="#807E7E"
                        app:boxStrokeWidth="0.5dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/etTotalFee"
                            android:enabled="false"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:padding="14dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- START DATE -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/start_date"
                        android:layout_marginBottom="18dp"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="#757575"
                        app:boxStrokeColor="#807E7E"
                        app:boxStrokeWidth="0.5dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/etStartDate"
                            android:enabled="false"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="14dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- END DATE -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/end_date"
                        android:layout_marginBottom="8dp"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="#757575"
                        app:boxStrokeColor="#807E7E"
                        app:boxStrokeWidth="0.5dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:hintTextColor="#EF5350">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/etEndDate"
                            android:enabled="false"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:padding="14dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- NEXT BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="@string/next_payment"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="#FDE9E9"
                app:cornerRadius="10dp"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp"
                app:elevation="4dp"
                android:layout_marginTop="19dp"
                android:textColor="#FD0505"
                android:letterSpacing="0.05"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconTint="#FD0505"
                app:iconPadding="8dp"/>

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/progress_indicator_active" />

                <View
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/progress_indicator_active" />

                <View
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/progress_indicator_inactive" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_2_of_3"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
