<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark gradient -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#1A1A1A"
                android:centerColor="#141414"
                android:endColor="#0F0F0F"
                android:type="linear" />
        </shape>
    </item>

    <!-- Right border glow -->
    <item android:left="-2dp" android:top="-2dp" android:bottom="-2dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#2000E5FF" />
        </shape>
    </item>
</layer-list>